}
.copyIcon {
    cursor: pointer;
    font-size: 19px;
}
.linkmain {
    background: #f3f3f3;
    border: 1px solid #d6d4dd;
    padding: 3px;
}





input.wpss {
    padding: 4px 12px;
    border: 1px solid #8f208f;
    margin-top: 12px;
    outline: none;
