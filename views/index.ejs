  display: none;
    left: 47px;
}

.wPasCheck {

    left: -16px;
}

input.linkIt {

    font-family: sans-serif;
    padding-left: 18px;
}



button.LinkCopyButton:active:before {
  content: "copied";
    position: absolute;
    top: -46px;
    color: white;
    background: #6438c7;
    padding: 6px 18px;
    border-radius: 12px;
    left: -11px;
    transition: all 1s;
    cursor: pointer;
